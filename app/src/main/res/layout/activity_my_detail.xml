<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal"
    tools:context="com.qhp334.drop.activity.MyDetailActivity">

    <LinearLayout
        android:id="@+id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="18dp"
            android:text="昵  称：" />

        <EditText
            android:id="@+id/new_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/shoujihao"
        android:layout_below="@+id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="4"
            android:paddingLeft="18dp"
            android:text="账  号："
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/new_phone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/newpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoujihao"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="18dp"
            android:text="密  码：" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>



    <Button
        android:id="@+id/button_mod"
        android:text="提交"
        android:background="@drawable/shape_button"
        android:layout_marginTop="101dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newpwd"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/back_mod"
        android:text="取消"
        android:background="@color/transparent"
        android:layout_below="@+id/button_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
